---
import { Image } from 'astro:assets';

export interface Props {
  id: string;
  thumbnailUrl: string;
  description: string;
}
const { id, thumbnailUrl, description } = Astro.props
---

<article
  class="rounded-sm shadow-md overflow-hidden
    transition-shadow duration-300 cursor-pointer bg-gray-900
    border border-gray-800 hover:border-gray-700"
  data-trigger="play-video"
  data-videoid={id}
>
  <Image class="w-full h-auto aspect-video object-cover"
      src={thumbnailUrl} alt={description}
      width="1280" height="720"/>
  <div class="p-4">
    <p
      class="font-medium line-clamp-2 text-gray-300"
    >
      {description}
    </p>
  </div>
</article>
